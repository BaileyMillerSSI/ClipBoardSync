<Window x:Class="ClipboardClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="143.639" Width="525">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="ContentBlock" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Margin="86.8,0.834,86.8,21.4" Grid.Row="2" Grid.ColumnSpan="3"/>
        <Ellipse x:Name="StatusIndicator" Fill="#FFF0B234" HorizontalAlignment="Left" Width="28.8" SizeChanged="StatusIndicator_SizeChanged" Margin="5,5,0,5"/>

    </Grid>
</Window>
