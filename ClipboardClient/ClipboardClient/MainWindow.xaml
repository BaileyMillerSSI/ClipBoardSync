<Window x:Class="ClipboardClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="displayBtn" Content="Display Clipboard Content" Margin="10" Click="displayBtn_Click"/>
        <Button x:Name="clearBtn" Content="Clear Clipboard Content" Margin="10" Grid.Column="1" Click="clearBtn_Click"/>
        <Button x:Name="setBtn" Content="Set to &quot;Hello World&quot;" Margin="10" Grid.Column="2" Click="setBtn_Click"/>
        <TextBlock x:Name="ContentBlock" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="1" Margin="0" Grid.Row="1"/>

    </Grid>
</Window>
